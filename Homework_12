using System;

internal class Program
{
    static void Main(string[] args)
    {
        int minNamber = 1;
        int maxNamber = 27;
        int magicNamber;
        int counter = 0;
        int counIterations = 0;
        int maxRange = 1000;
        number = 100;

          Random random = new Random();
        magicNamber = random.Next(minNamber, maxNamber);

        for (counter = counter; counter <= maxRange; counter += magicNamber)
        {
            if (counter >= number)
            {
                counIterations++;
            }
        }
        Console.WriteLine(counIterations);
    }
}

using System;

internal class Program
{
    static void Main(string[] args)
    {
        string userInput = "exit";

        Console.WriteLine("Это программа позволяет тебе понять кто я для тебе");
        Console.WriteLine("Если захочешь выйти то просто напечатай " + userInput);
  
        while (true)
        { 
            Console.WriteLine("Я твой...");
            userInput = Console.ReadLine(); 

            if (userInput == "exit")
                {
                break;
            }
        }
    }
}
